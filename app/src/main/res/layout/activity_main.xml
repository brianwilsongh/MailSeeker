<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wordpress.httpspandareaktor.quant.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:onClick="extractButton"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:text="Extract"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:onClick="clearURL"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:text="Clear"
                android:textColor="@android:color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Maximum extractions?"
                    android:textColor="@color/colorAccent" />

                <EditText
                    android:id="@+id/maxLinksInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter number"
                    android:inputType="number"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <EditText
            android:id="@+id/inputURL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="http://www.example.com" />


    </LinearLayout>


    <RelativeLayout
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/ProgressCircle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="40dp" />

        <ProgressBar
            android:id="@+id/innerProgressCircle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:rotation="180" />

        <TextView
            android:id="@+id/progressText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ProgressCircle"
            android:layout_marginTop="30dp"
            android:text="Sending query..."
            android:textAlignment="center" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/progressText"
            android:layout_centerHorizontal="true"
            android:alpha="0.6"
            android:onClick="killTask"
            android:text="Kill Task" />

    </RelativeLayout>

    <TextView
        android:id="@+id/topWords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:maxLines="4"
        android:textColor="@color/colorAccent"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/urlsDiscovered"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="--end--"
                android:textColor="#0000ff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/urlsHit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="--end--"
                android:textColor="#FF0000" />

        </LinearLayout>

    </ScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_margin="20dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/sheep_bg"
            android:layout_gravity="top"
            android:scaleType="fitXY"
            android:alpha="0.4"
            android:elevation="0dp"/>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/dataFeed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="THIS IS A TEST"
                android:textColor="#000000" />
        </ScrollView>


    </FrameLayout>


</LinearLayout>
